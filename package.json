{
  "name": "comiclab",
  "displayName": "ComicLab",
  "publisher": "metaleap",
  "version": "0.0.1",
  "activationEvents": [ ],
  "main": "ui/vsc_ext/js/app.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "comiclabExplorer",
          "title": "ComicLab",
          "icon": "ui/icons/comments.svg"
        }
      ]
    },
    "views": {
      "comiclabExplorer": [
        {
          "id": "comiclabExplorerProjColls",
          "name": "Collections",
          "icon": "ui/icons/box-archive.svg"
        },
        {
          "id": "comiclabExplorerProjBooks",
          "name": "Books",
          "icon": "ui/icons/book.svg"
        },
        {
          "id": "comiclabExplorerProjSites",
          "name": "Sites",
          "icon": "ui/icons/globe.svg"
        },
        {
          "id": "comicLabSidebarWebview",
          "type": "webview",
          "name": "Project Defaults",
          "icon": "ui/icons/screwdriver-wrench.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "comiclab.menu",
        "title": "ComicLab",
        "icon": "ui/icons/comments.svg"
      },
      { "command": "comiclab.proj.colls.addPage", "title": "Add Page", "icon": "ui/icons/file-circle-plus.svg" },
      { "command": "comiclab.proj.colls.addColl", "title": "Add Collection", "icon": "ui/icons/folder-plus.svg" },
      { "command": "comiclab.proj.colls.delete", "title": "Delete", "icon": "ui/icons/trash.svg" },
      { "command": "comiclab.proj.colls.moveUp", "title": "Move Up", "icon": "ui/icons/angle-up.svg" },
      { "command": "comiclab.proj.colls.moveDn", "title": "Move Down", "icon": "ui/icons/angle-down.svg" },
      { "command": "comiclab.proj.colls.moveTop", "title": "Move to Top", "icon": "ui/icons/angles-up.svg" },
      { "command": "comiclab.proj.colls.moveEnd", "title": "Move to End", "icon": "ui/icons/angles-down.svg" }
    ],
    "menus": {
      "view/title": [
        { "command": "comiclab.proj.colls.addColl", "when": "view == comiclabExplorerProjColls", "group": "navigation" }
      ],
      "view/item/context": [
        { "command": "comiclab.proj.colls.addColl", "group": "inline", "when": "view == comiclabExplorerProjColls && viewItem == coll" },
        { "command": "comiclab.proj.colls.addPage", "group": "inline", "when": "view == comiclabExplorerProjColls && viewItem == coll" },
        { "command": "comiclab.proj.colls.delete", "when": "view == comiclabExplorerProjColls && (viewItem == coll || viewItem == page)" },
        { "command": "comiclab.proj.colls.moveUp", "when": "view == comiclabExplorerProjColls && (viewItem == coll || viewItem == page)" },
        { "command": "comiclab.proj.colls.moveDn", "when": "view == comiclabExplorerProjColls && (viewItem == coll || viewItem == page)" },
        { "command": "comiclab.proj.colls.moveTop", "when": "view == comiclabExplorerProjColls && (viewItem == coll || viewItem == page)" },
        { "command": "comiclab.proj.colls.moveEnd", "when": "view == comiclabExplorerProjColls && (viewItem == coll || viewItem == page)" }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile_ui_vsc_ext && npm run compile_ui_webviews",
    "compile_ui_vsc_ext": "tsc -p ./ui/vsc_ext",
    "compile_ui_webviews": "tsc -p ./ui/webviews",
    "watch": "(rm -rf ./ui/webviews/js/vanjs) && (mkdir -p ./ui/webviews/js/vanjs) && (cp -f ./ui/webviews/vanjs/* ./ui/webviews/js/vanjs/) && (tsc -watch -p ./ui/webviews &) && (tsc -watch -p ./ui/vsc_ext)"
  },
  "engines": {
    "vscode": "^1.82.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "18.x",
    "@types/node-fetch": "^2.6.5",
    "@types/vscode": "^1.82.0",
    "@types/vscode-webview": "^1.57.2",
    "glob": "^10.3.4",
    "mocha": "^10.2.0",
    "node-fetch": "^2.7.0",
    "typescript": "^5.2.2"
  }
}
